#!/usr/bin/env perl
# vim: set filetype=perl:

use strict;
use warnings;

use FindBin qw($Bin);

my $basedir;
if (-r "$Bin/Makefile.PL") {
    $basedir = $Bin;
}
elsif (-r "$Bin/../Makefile.PL") {
    $basedir = "$Bin/..";
}
else {
    die;
}

my $target = "$basedir/local-lib5"; 
my @include = ('.', "$basedir/lib");

$ENV{PERL5LIB} = join ':', @include;

require local::lib;
local::lib->import( '--self-contained', $target );

unless ( caller ) {
    if ( @ARGV ) {
        exec @ARGV;
    }
}

1;

